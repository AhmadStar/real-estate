<!-- Content Header (Page header) -->
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Update Settings</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
          <li class="breadcrumb-item active">Update Settings</li>
        </ol>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
  <form role="form" id="update_settings" action="/dashboard/update_settings" method="POST">
  <div class="row">
    <div class="col-md-6">
      <div class="card card-primary">
        <div class="card-header">
          <h3 class="card-title">English Settings <img src="/img/flag.png" alt=""></h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
              <i class="fas fa-minus"></i></button>
          </div>
        </div>
        <div class="card-body">
          
          <% en_settings.forEach(function(row) { %>
          <div class="form-group">
            <label for="<%= row.name %>"><%= row.name %></label>
            <input type="text" id="<%= row.id %>" name="<%= row.id %>" value="<%= row.value %>" class="form-control">
          </div>
          <% }) %>

        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </div>
    <div class="col-md-6">
      <div class="card card-primary">
        <div class="card-header">
          <h3 class="card-title">China Settings <img src="/img/ch.png" alt=""> </h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
              <i class="fas fa-minus"></i></button>
          </div>
        </div>
        <div class="card-body">

          <% ch_settings.forEach(function(row) { %>
            <div class="form-group">
              <label for="<%= row.name %>"><%= row.name %></label>
              <input type="text" id="<%= row.id %>" name="<%= row.id %>" value="<%= row.value %>" class="form-control">
            </div>
            <% }) %>

        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <a href="#" class="btn btn-secondary">Cancel</a>
      <input type="submit" value="Update Settings" class="btn btn-success float-right">
    </div>
  </div>
  </form>
</section>
<!-- /.content -->