<!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">Partner List</h1>
        </div><!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Partner List</li>
          </ol>
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">List of all Partners</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>id</th>
                  <th>name</th>
                  <th>image</th>
                  <th>Action</th>
                </tr>
                </thead>
                <tbody>
                  <% partner_list.forEach(function(row) { %>
                      <tr>
                        <td name="id"><%= row.id %></td>
                        <td name="name"><%= row.name %></td>
                        <td name="image"><%= row.image %></td>
                        <td class="project-actions text-right">
                          <a class="btn btn-info btn-sm" id="edit_partner" href="#">
                              <i class="fas fa-pencil-alt">
                              </i>
                              Edit
                          </a>
                          <a class="btn btn-danger btn-sm" href="#">
                              <i class="fas fa-trash">
                              </i>
                              Delete
                          </a>
                      </td>
                      </tr>
                  <% }) %>
                </tfoot>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->


  <div class="modal fade" id="partner_modal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Edit Partner Modal</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form method="POST"  id="partner_form">
            <div class="form-group">
              <input type="hidden" name="partner_id" class="form-control" id="partner_id">
              <label for="recipient-name" class="col-form-label">Partner Name:</label>
              <input type="text" name="partner_name" class="form-control" id="partner_name">
            </div>
            <div class="form-group">
              <label for="message-text" class="col-form-label">Partner Image:</label>
              <input type="file" name="partner_image" class="form-control" id="partner_image" accept="image/png, image/jpeg" onchange="preview()">
            </div>
            <div class="form-group">
              <img id="frame" src="" width="100px" height="100px"/>
            </div>
          </form>
        </div>
        <div class="modal-footer justify-content-between">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" id="update_partner" class="btn btn-primary">Save changes</button>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>
  <!-- /.modal -->
